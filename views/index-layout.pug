doctype html
html
  head
    title=title
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')
    link(rel='shortcut icon', href='favicon.png')
    link(rel="stylesheet" href="app.css" type="text/css")
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css')
    style.
      body {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
      }
      main {
        flex: 1 0 auto;
      }
    block head
  body
    header
      nav.cyan.darken-4(role='navigation')
        .nav-wrapper.container
          a#logo-container.brand-logo(href='/') Proyecto
          ul.right.hide-on-med-and-down
            li
              a(href='/login') login
          ul#nav-mobile.side-nav
            li
              a &lt;
            li
              a(href='/login') login
          a.button-collapse(href='/', data-activates='nav-mobile')
            i.material-icons menu
    main
      .container
        block content
    footer.page-footer.green.darken-4
      .footer-copyright
        .container
          a.orange-text.text-lighten-3(href='#') rafaelgp87
    script(src='https://code.jquery.com/jquery-1.12.4.min.js', integrity='sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js')
    script.
      $(document).ajaxStart(function(){
        $('.loadAjax').show()
      })

      $(document).ajaxStop(function(){
        $('.loadAjax').hide();
      })

      $('.button-collapse').sideNav()

      $('#nav-mobile').click(function(){
        $('.button-collapse').sideNav('hide')
      })
    block scripts
